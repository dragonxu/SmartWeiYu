<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#a0000000"
    android:gravity="center">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_finddevice_border">
        
        <TextView android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="配置设备(30s)"
            android:textColor="#000"
            android:textSize="17sp"
            android:gravity="center"/>
        
        <LinearLayout 
           android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <pl.droidsonroids.gif.GifImageView
		        android:id="@+id/gif2"
		        android:layout_width="35dp"
		        android:layout_height="35dp"/>
            
	        <TextView android:id="@+id/tvFindDeviceText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/black1"
	            android:gravity="center"
	            android:textSize="15sp"
	            android:text="发现设备：0"
	            android:layout_marginTop="5dp"/>
            
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ccc"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            
             <TextView android:id="@+id/tvCancel"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:textColor="@color/black1"
	            android:gravity="center"
	            android:text="@string/qu_xiao"/>
             
             <View android:id="@+id/view1"
                 android:layout_width="0.5dp"
                 android:layout_height="match_parent"
                 android:background="#ccc"
                 android:visibility="visible"/>
	        
	        <TextView android:id="@+id/tvFinish"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="match_parent"
	            android:textColor="@color/mo_lv"
	            android:gravity="center"
	            android:text="@string/wan_cheng"
	            android:visibility="visible"/>
            
        </LinearLayout>
        
       
        
    </LinearLayout>
    

</LinearLayout>
