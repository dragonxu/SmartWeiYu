<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <ImageView android:id="@+id/imgLeft"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/discharge"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgLeft"
            android:layout_marginLeft="10dp"
            android:text="AIR-BLOWER"
            android:textSize="18sp"
            android:textColor="#076273"/>

        <ImageView android:id="@+id/imgSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_switch_off"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>
